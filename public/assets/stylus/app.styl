@import "vendor/bulma.min.css"

body {
    background-color: #fff;
}

table {
  width: 100%;
}

.container {
  max-width: 800px;
}

.user-space {
    border: 3px solid #fff;
    padding: 15px;
    border-radius: 10px;
    text-align: right;
    float: right;
    width: 70%;
}


.game-active {

  .draggable-area {
    width: 100%;
    min-height: 50px;
  }

  .card {
    cursor: move;
    float: left;
    padding: 10px;
    width: 45px;
    height: 50px;
    border: 1px solid #ccc;
    border-radius: 3px; 
    text-align: center;
    margin-right: 10px;
    text-transform: uppercase;
    font-size: 22px;
    line-height: 1.2;
  }

  .game-settings {
    background-color: #eee;
  }

  .game-waiting {

    h3 {
      margin-bottom: 10px;
    }

    .player-list {
      list-style: none;
      padding: 0;
      margin: 0 0 25px;

      li {
        width: 25%;
        padding: 0 5px;
        float: left;
        margin-top: 0;
        span {
          display: block;
          padding: 5px 0 8px;
          background-color: #eeeeee;
          font-size: 22px;
          text-align: center;
          color: #333;
        }
      }
    }

    .button {
      width: 100%;  
    }
  }
  
}

.player-hand {
  
}

.premises {
  width: 100%;
  border: 1px solid #ccc;
  background-color: #efefef;
  padding: 0 15px;
  overflow-x: scroll;
  
  .premise {
    width: 100%;
    height: 70px;
    padding: 10px;

    //&:not(:last-child) {
      border-bottom: 3px solid #ccc;
    //}
  }
}