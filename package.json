{
  "name": "ergo-online",
  "version": "1.0.0",
  "description": "Do you exist? I think therefore I am? From Socrates to Descartes.",
  "author": "Ezra Sharp <ezra.sharp@nice.kiwi>",
  "private": true,
  "engines": {
    "node": "8.11.2",
    "npm": "6.1.0"
  },
  "scripts": {
    "stylus": "stylus -w ./public/assets/stylus/app.styl -o ./public/assets/css",
    "server-back": "nodemon --watch ./src app.js",
    "server-front": "browser-sync start --server \"public\" --files \"public\" --port 8080 --no-ghost-mode --logLevel \"silent\"",
    "start": "concurrently --kill-others --names \"STYLUS,SERVER,FRONT\" \"npm run stylus\" \"npm run server-back\" \"npm run server-front\""
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.8",
    "@koa/cors": "^2.2.1",
    "axios": "^0.18.0",
    "bulma": "^0.7.1",
    "js-cookie": "^2.2.0",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "koa-static": "^4.0.3",
    "lokijs": "^1.5.4",
    "nanoid": "^1.0.2",
    "vue": "^2.5.16",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "browser-sync": "^2.24.4",
    "concurrently": "^3.5.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "nodemon": "^1.17.5",
    "stylus": "^0.54.5"
  }
}
